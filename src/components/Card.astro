---
export interface Props {
  title: string
  body: string
  href: string
  categories: { name: string }[]
}

const { href, title, body, categories } = Astro.props as Props
---

<article class="card">
  <a href={href}>
    {categories.map((cat) => <h3>{cat.name}</h3>)}
    <h2>{title}</h2>
    <Fragment set:html={body} />
    <div class="arrow">
      <span>&rarr;</span>
    </div>
  </a>
</article>

<style>
  .card {
    list-style: none;
    display: flex;
    flex-direction: column;
    padding: 0.15rem;
  }

  .card > a,
  a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: 1em 1.3em;
    border-radius: 0.35rem;
    color: var(--text-color);
  }

  h2 {
    margin: 0;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }

  p {
    margin-top: 0.75rem;
    margin-bottom: 0;
  }

  .arrow {
    display: flex;
    justify-content: end;
    font-size: 2em;
    transition: transform 0.3s cubic-bezier(0.22, 1, 0.36, 1);
  }

  .arrow span {
    transition: transform 0.3s cubic-bezier(0.22, 1, 0.36, 1);
  }

  .card:is(:hover, :focus-within) span {
    will-change: transform;
    transform: translateX(5px);
  }
</style>
